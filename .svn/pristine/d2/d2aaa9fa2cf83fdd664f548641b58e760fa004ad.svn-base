 #wallClock {
                width:100%;
                text-align:center;
                /*                padding:30px;*/

                background-color:#3FC4EF;

                -webkit-border-radius:1em;
                -moz-border-radius: 1em;
                -o-border-radius: 1em;
            }

            #fullDate {
                display:block;
                font-family:Courier,monospace;
                font-weight:bold;
                font-size:12pt;
                color:#FFFF00;
            }

            #bigTime {
                display:block;
                font-family:Arial,Helvetica,sans-serif;
                font-weight:bold;
                font-size:35pt;
                color:#FFFFFF;
                line-height:100%;
            }

            #dayName {
                display:inline;
                font-family:Courier,monospace;
                font-weight:bold;
                font-size:12pt;
                color:#FFFF00;
            }

            #seconds {
                display:inline;
                font-family:Courier,monospace;
                font-weight:bold;
                font-size:16pt;
                color:#FFFFFF;
            }